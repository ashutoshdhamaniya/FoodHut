<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEDED"
    tools:context=".activity.OrderSuccessfulActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_confirmed"
        android:layout_centerInParent="true"
        android:layout_above="@+id/imgRight"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="@font/almendra_display"/>

    <ImageView
        android:id="@+id/imgRight"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/order_placed"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgRight"
        android:layout_marginTop="-15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/almendra_display"
        android:text="@string/successful_placed"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orderSuccessfulOkBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textAlignment="center"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:layout_alignParentBottom="true"
        android:text="Ok"/>

</RelativeLayout>